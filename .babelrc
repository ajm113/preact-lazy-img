{
    "env" : {
        "development" : {
            "presets": ["es2015", "stage-0", "react"],
            "plugins": [
                [
                    "transform-react-jsx",
                    {
                        "pragma": "h"
                    }
                ]
            ]
        },
        "build" : {
            "presets": ["es2015", "stage-0", "react"],
            "ignore": [
                "**/_tests_/*.js"
            ],
            "plugins": [
                [
                    "transform-react-jsx",
                    {
                        "pragma": "h"
                    }
                ]
            ]
        }
    }
}
